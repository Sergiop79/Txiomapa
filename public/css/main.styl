// Kolore batzuk

urdina = #51BDFB
urdina2 = #33CCFF
grisa = #eee
// Border radius prefijoak

border-radius(n)
	-webkit-border-radius n
	-moz-border-radius n
	border-radius n

// Ikonoak

@import fonts

body
	background urdina
	font-size 16px
	font-family Open Sans, sans-serif
	text-align center
	height 100%
	overflow hidden
	width 100%

	header
		color #FFFFFF
		height 10%
		padding 0	
		width 100%
		figure	
			img
				width 60px
		h1
			font-family Conv_Arista
			background white
			border-radius 0.5em
			color urdina2
			padding 0.1em 0.2em
			margin-top 5px
			margin-bottom 5px
		figure, h1
			text-align left
		figure, nav, h1
			display inline-block
			vertical-align middle
		nav
			ul
				li
					display inline-block
					margin-left 0.5 em
					list-style none
					
					
	footer
		background black
		bottom 0px
		color white
		position fixed
		width 100%
		ul
			margin 0
			li
				display inline-block
				list-style none
				margin 0 1em
				vertical-align middle
	#bilaketa-kuadroa
		background none repeat scroll 0 0 #FFFFFF
		border 1px solid #8D8D8D
		border-radius (5px)
		box-shadow 1px 1px 2px #999999 inset
		padding 0.2em	
	
	#honi_buruz
		cursor pointer
	#joerak
		display none
	#lupa
		margin-left 0.5em
	#mapa
		position absolute
		height 90%
		width  100%


